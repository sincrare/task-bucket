%table.table.table-responsive
  %thead
    %tr
      %th Name
      %th Color
      %th Description
      %th Archive
      %th
      %th
      %th

  %tbody
    - @projects.each do |project|
      %tr
        %td= link_to project.name, project_tasks_path(project)
        %td
          - if project.color.present?
            %span.badge.text-light{ style: "background-color:#{project.color}" }= project.color
          - else
            %span.badge.badge-secondary= project.color
        %td= project.description
        %td= project.archive
        %td= link_to 'Show', project
        %td= link_to 'Edit', edit_project_path(project)
        %td= link_to 'Destroy', project, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Project', new_project_path, class: 'btn btn-primary'
