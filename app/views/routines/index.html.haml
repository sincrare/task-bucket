- content_for :title do
  Routines
%table.table.table-responsive
  %thead
    %tr
      %th Title
      %th Estimate
      %th Project
      %th Active
      %th
      %th
      %th

  %tbody
    - @routines.each do |routine|
      %tr
        %td= routine.title
        %td= routine.estimate
        %td= routine.project&.name
        %td= routine.active
        %td= link_to 'Show', routine
        %td= link_to 'Edit', edit_routine_path(routine)
        %td= link_to 'Destroy', routine, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Routine', new_routine_path, class: 'btn btn-primary'
