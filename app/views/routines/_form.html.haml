-# frozen_string_literal: true
= simple_form_for(@routine) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.input :estimate
    = f.association :project

  .form-actions
    = f.button :submit
